@model SHA512App.Models.CryptoViewModel
@{
    ViewData["Title"] = "Güvenli Şifreleme Sistemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="neon-card" style="margin-top: 60px; text-align:center;">
    <h1 style="font-size:2.5rem; letter-spacing:2px; margin-bottom: 10px;">KRİPTOLOJİ UYGULAMASI</h1>
    <p style="color:#00FF00; font-size:1.2rem; margin-bottom: 40px;">Eliptik Eğri Kriptografisi ve SHA512 Özet Fonksiyonu</p>
    <div style="display:flex; flex-wrap:wrap; justify-content:center; gap:40px;">
        <div class="neon-card" style="width:320px; min-width:260px;">
            <i class="fas fa-lock fa-2x" style="color:#00FF00;"></i>
            <h2 style="margin:18px 0 10px 0;">ECC</h2>
            <p>Eliptik eğri kriptografisi ile metin şifreleme ve çözme işlemleri.</p>
            <a href="/Home/ECC" class="neon-btn" style="margin-top:18px;"><i class="fas fa-lock"></i> ECC</a>
        </div>
        <div class="neon-card" style="width:320px; min-width:260px;">
            <i class="fas fa-fingerprint fa-2x" style="color:#00FF00;"></i>
            <h2 style="margin:18px 0 10px 0;">SHA512</h2>
            <p>Metin veya dosya için SHA512 özet (hash) fonksiyonu.</p>
            <a href="/Home/SHA512Hash" class="neon-btn" style="margin-top:18px;"><i class="fas fa-hashtag"></i> SHA512</a>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        function copyToClipboard(id) {
            var copyText = document.getElementById(id);
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            document.execCommand("copy");
        }
    </script>
}

